@page
@model Agenda.Pages.Categorias.EditarModel
@{
	ViewData["Title"] = "Editar una Categoria";
}

<div class="container">
	<div class="row">
		<div class="col-8 offset-2">
			<div class="text-info">Editar una Categoria</div>
			<form method="POST">

				<input type="hidden" asp-for="Categoria.Id"/>

				<div class="mb-3">
					<label asp-for="Categoria.Nombre" class="form-label"></label>
					<input asp-for="Categoria.Nombre" class="form-control" placeholder="Ingrese el nombre" />
					<span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Categoria.FechaCreacion" class="form-label"></label>
					<input asp-for="Categoria.FechaCreacion" class="form-control" />
					<span asp-validation-for="Categoria.FechaCreacion" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary">Editar Categoria</button>
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col-6">
			<a asp-page="Index" class="btn btn-success">Volver</a>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}