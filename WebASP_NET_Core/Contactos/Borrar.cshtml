@page
@model Agenda.Pages.Contactos.BorrarModel
@{
	ViewData["Title"] = "Borrar un Contacto";
}



<div class="container">
	<div class="row">
		<div class="col-8 offset-2">
			<h2 class="text-info">Borrar Contacto</h2>
			<form method="POST">

				<input type="hidden" asp-for="ContactoVm.Contacto.Id" />
				<div class="mb-3">
					<label asp-for="ContactoVm.Contacto.Nombre" class="form-label"></label>
					<input asp-for="ContactoVm.Contacto.Nombre" class="form-control" placeholder="Ingrese el nombre" readonly />
					<span asp-validation-for="ContactoVm.Contacto.Nombre" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ContactoVm.Contacto.Email" class="form-label"></label>
					<input asp-for="ContactoVm.Contacto.Email" class="form-control" placeholder="Ingrese el email" readonly/>
					<span asp-validation-for="ContactoVm.Contacto.Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ContactoVm.Contacto.Telefono" class="form-label"></label>
					<input asp-for="ContactoVm.Contacto.Telefono" class="form-control" placeholder="Ingrese el telefono" readonly/>
					<span asp-validation-for="ContactoVm.Contacto.Telefono" class="text-danger"></span>
				</div>

				<!--Coloco lista categorias-->
				<div class="mb-3">
					<label asp-for="ContactoVm.Contacto.Categoria" class="form-label"></label>
					<input asp-for="ContactoVm.Contacto.Categoria.Nombre" class="form-control" placeholder="Ingrese el telefono" readonly/>
					
				</div>


				<div class="mb-3">
					<label asp-for="ContactoVm.Contacto.FechaCreacion" class="form-label"></label>
					<input asp-for="ContactoVm.Contacto.FechaCreacion" class="form-control" readonly/>
					<span asp-validation-for="ContactoVm.Contacto.FechaCreacion" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary">Borrar Contacto</button>
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col-6">
			<a asp-page="Index" class="btn btn-success">Volver</a>
		</div>
	</div>
</div>

